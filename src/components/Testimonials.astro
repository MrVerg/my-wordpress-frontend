---
const { testimonials = [] } = Astro.props;
const showTestimonials = testimonials.slice(0, 3);

const cardColors = ['bg-brand-coral', 'bg-brand-purple text-white', 'bg-brand-lime'];
---

{testimonials && testimonials.length > 0 && (
  <section class="py-24 bg-white overflow-hidden">
    <div class="container-custom">
      <div class="text-center mb-16 space-y-4">
        <span class="inline-block px-4 py-1 rounded-full bg-brand-purple/10 text-brand-purple font-bold uppercase tracking-widest text-sm">
          Testimonios
        </span>
        <h2 class="text-4xl md:text-5xl font-black">LO QUE DICE NUESTRA COMUNIDAD</h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {showTestimonials.map((t, index) => (
          <div class={`${cardColors[index % cardColors.length]} p-10 rounded-[3rem] shadow-xl flex flex-col justify-between transition-transform hover:-rotate-2 duration-300 relative group`}>
            <div class="absolute top-6 right-8 text-6xl opacity-20 font-serif group-hover:scale-125 transition-transform">“</div>
            
            <div class="mb-8 relative z-10">
              <p class="text-lg font-bold leading-relaxed italic">
                "{t.testimonial_text}"
              </p>
            </div>
            
            <div class="flex items-center gap-4 pt-6 border-t border-black/10 mt-auto">
              <div class="w-14 h-14 rounded-2xl overflow-hidden border-2 border-current shrink-0">
                {t.testimonial_photo?.url ? (
                  <img src={t.testimonial_photo.url} alt={t.testimonial_name || 'Cliente'} class="w-full h-full object-cover" />
                ) : (
                  <div class="w-full h-full bg-black/10 flex items-center justify-center font-black text-xl">
                    {(t.testimonial_name || '?').charAt(0)}
                  </div>
                )}
              </div>
              <div class="flex flex-col">
                <span class="font-black text-lg leading-tight uppercase">{t.testimonial_name || 'Anónimo'}</span>
                <span class="text-xs font-bold opacity-70 uppercase tracking-widest">{t.testimonial_role || 'Estudiante'}</span>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
)}


